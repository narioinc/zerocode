{
    "scenarioName": "Publish a message to mqtt topic - vanilla",
    "steps": [
        {
            "name": "publish_mqtt",
            "url": "mqtt-topic:demo-1",
            "operation": "pubsub",
            "clientId": "testdevice-1",
            "request": {
                "recordType" : "RAW",
                "subscriberLocalConfigs": {
                    "subscriptionTimeout": 15000
                },
                "records":[
                    {
                        "qos": "1",
                        "retained": false,
                        "payload": "{\"text\" : \"Hello world123\"}"
                    }
                ]
            },
            "assertions": {
                "size": 1,
                "records": [{
                    "qos": 0,
                    "retained": false,
                    "payload": "{\"text\" : \"Hello world123\"}"
                }]
            }
        }
    ]
}
